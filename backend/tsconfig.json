{
    "compilerOptions": {
        "paths": {
            "@modules/*": ["./src/modules/*"],
            "@config/*": ["./src/config/*"],
            "@shared/*": ["./src/shared/*"],
            "@mocks/*": ["./tests/mocks/*"]
        },
        "target": "es2017",
        "experimentalDecorators": true,
        "allowJs": true,
        "module": "commonjs",
        "outDir": "./dist",
        "baseUrl": ".",
        "rootDir": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true
    }
}